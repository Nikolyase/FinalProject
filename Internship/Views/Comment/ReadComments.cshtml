@model FinalProjectMyBlog.ViewModels.Comments.ReadCommentViewModel;

<div class="block-reg background-white">

    <h4 class="center">@Model.Publication.Title</h4>

    <div class="row">

        <div class="side">
            <div class="lined-block">

                <div>
                    <label class="gray-text">Текст публикации:</label>
                    <label> @Model.Publication.Text</label>
                </div>
                <div>
                    <label class="gray-text">Дата публикации:</label>
                    <label> @Model.Publication.Date</label>
                </div>
            </div>
           
            <div class="lined-block" commentscontainer>
                <label class="gray-text">Комментарии</label>

                <div class="commentsbox">
                    @if (Model.Comments.Count != 0)
                    {
                        @foreach (var comment in @Model.Comments)
                        {
                    <div class="datadiv">
                        <div>
                            <label class="gray-text">Текст комментария:</label>
                            <label> @comment.Text</label>
                        </div>

                        <div>
                            <label class="gray-text">Дата комментария:</label>
                            <label> @comment.Date</label>
                        </div>

                        <div>
                            <label class="gray-text">Пользователь:</label>
                            <label> @comment.UserName</label>
                        </div>
                        <div class="mrgn center-align">
                            <form asp-controller="Comment" asp-action="EditComment" asp-route-id="@comment.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-primary min-width-but">
                                    Редактировать комментарий
                                </button>
                            </form>
                            <form asp-controller="Comment" asp-action="DeleteComment" asp-route-id="@comment.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-primary min-width-but">
                                    Удалить
                                </button>
                            </form>
                        </div>
                    </div>
                        }
                    }
                    else
                    {
                        <div>
                            <label> Комментарии отсутствуют.</label>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>

</div>