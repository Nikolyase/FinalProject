@model FinalProjectMyBlog.ViewModels.Comments.CommentCreateViewModel;


<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<div class="block-reg background-white">
    <h3 class="center">Создание комментария</h3>
    <form class="frm" method="post" asp-controller="Comment" asp-action="SaveComment">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="mrgn">
                <input asp-for="PublicationId" value="@Model.PublicationId" class="form-control" readonly="readonly"/>
                <span asp-validation-for="PublicationId" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="mrgn">
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
        </div>

        <div class="center">
            <input class="btn_submit" type="submit" value="Сохранить" />
        </div>
    </form>
</div>