@model FinalProjectMyBlog.ViewModels.Tags.TagEditViewModel;


<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<div class="block-reg background-white">
    <h3 class="center">Редактирование тега</h3>
    <form class="frm" method="post" asp-controller="Tag" asp-action="UpdateTag">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="mrgn">
                <input asp-for="Id" class="form-control" readonly="readonly" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="mrgn">
                <input asp-for="TagName" class="form-control" />
                <span asp-validation-for="TagName" class="text-danger"></span>
            </div>
        </div>
        <div class="center">
            <form asp-controller="Tag" asp-action="UpdateTag" method="post">
                <button type="submit" class="btn btn-sm btn-primary min-width-but">
                    Сохранить
                </button>
            </form>
        </div>
        <a asp-area="" asp-controller="AccountManager" asp-action="MyPage">Выйти без сохранения</a>
    </form>
</div>